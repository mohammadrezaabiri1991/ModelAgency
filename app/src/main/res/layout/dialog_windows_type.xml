<layout>

    <data>

        <variable
            name="windowsType"
            type="com.hekatomsoft.androidcor.bottombarfragment.googlemap.Group" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent_windows_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fafafa"
            android:gravity="center"
            android:text="@string/windows_type_str" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin8dp"
                android:paddingBottom="@dimen/margin16dp">

                <LinearLayout
                    android:id="@+id/ll_windows_type_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin16dp"
                    android:layout_marginRight="@dimen/margin4dp"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/tgb_gentle_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbGentleWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_gentle"
                        android:textOn="@string/str_gentle" />

                    <ToggleButton
                        android:id="@+id/tgb_pvc_two_shells_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbPvcTowShellsWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_pvc_two_shells"
                        android:textOn="@string/str_pvc_two_shells" />

                    <ToggleButton
                        android:id="@+id/tgb_metal_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbMetalWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_metal"
                        android:textOn="@string/str_metal" />

                    <ToggleButton
                        android:id="@+id/tgb_aluminium_thermal_break_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbAluminiumThermalBreak}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_aluminium_thermal_break"
                        android:textOn="@string/str_aluminium_thermal_break" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_windows_type_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin4dp"
                    android:layout_marginRight="@dimen/margin16dp"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/tgb_wood_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbWoodWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_woody"
                        android:textOn="@string/str_woody" />

                    <ToggleButton
                        android:id="@+id/tgb_metal_two_shells_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbMetalTowShellsWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_metal_two_shells"
                        android:textOn="@string/str_metal_two_shells" />


                    <ToggleButton
                        android:id="@+id/tgb_fiber_glass_windows_type"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:background="@drawable/round_background_toggle_buttons"
                        android:orientation="vertical"
                        android:checked="@={windowsType.tgbFiberGlassWindowsType}"
                        android:textColor="@drawable/tgb_on_mode_text_color"
                        android:textOff="@string/str_fiber_glass"
                        android:textOn="@string/str_fiber_glass" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_confirm_dialog_windows_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="@string/str_confirm" />

    </LinearLayout>
</layout>