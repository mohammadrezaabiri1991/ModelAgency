<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_120_dp"
        android:layout_margin="5dp"
        android:background="#66cccccc">

        <LinearLayout
            android:id="@+id/linearAddNewUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66cccccc"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin4dp"
                android:layout_marginRight="@dimen/margin4dp"
                android:src="@drawable/plus"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin4dp"
                android:gravity="center"
                android:text="@string/str_add_new_unit"
                tools:ignore="RtlHardcoded" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>